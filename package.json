{
  "name": "Tetris Party",
  "version": "1.0.0",
  "description": "Tetris Party is a figma widget that allows you to play Tetris with other people.",
  "scripts": {
    "test": "npm run tsc && npm run build",
    "test:unit:watch": "jest --watch",
    "test:unit": "jest",
    "format": "prettier --write .",
    "tsc": "npm run tsc:widget && npm run tsc:ui",
    "tsc:widget": "tsc --noEmit -p widget",
    "tsc:ui": "tsc --noEmit -p src",
    "tsc:watch": "concurrently -n widget,iframe \"npm run tsc:widget -- --watch --preserveWatchOutput\" \"npm run tsc:ui -- --watch --preserveWatchOutput\"",
    "build": "npm run build:ui && npm run build:widget",
    "build:production": "npm run build:ui && npm run build:widget -- --minify",
    "build:widget": "esbuild widget/code.tsx --bundle --outfile=dist/code.js",
    "build:ui": "npx vite build --minify esbuild --emptyOutDir=false",
    "build:watch": "concurrently -n widget,iframe \"npm run build:widget -- --watch\" \"npm run build:ui -- --watch\"",
    "dev": "concurrently -n tsc,build,vite 'npm:tsc:watch' 'npm:build:watch' 'npx vite'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "Minseon Kim",
  "license": "MIT License",
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "recoil": "^0.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@figma/plugin-typings": "^1.41.1",
    "@figma/widget-typings": "*",
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/addon-storyshots": "^6.4.14",
    "@storybook/react": "^6.4.14",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.3.0",
    "esbuild": "^0.14.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.4.7",
    "prettier": "^2.3.2",
    "react-test-renderer": "^17.0.2",
    "storybook-css-modules-preset": "^1.1.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.2",
    "vite": "^2.5.2",
    "vite-plugin-singlefile": "^0.5.1"
  }
}
